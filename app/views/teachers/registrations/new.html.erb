<h2>Teacher登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "teachers/shared/error_messages", resource: resource %>
  <div class="form-group">

  
  <div class="field">
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image, class:"teacher-image" %>
  </div>

  <div class="field">
    <%= f.label :nickname, "ニックネーム" %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワードの確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :teach_content, "教えられる内容の概要" %><br />
    <%= f.text_field :teach_content, autofocus: true, autocomplete: "teach-content" %>
  </div>

  <div class="field">
    <%= f.label :teach_detail, "教えられる内容の詳細" %><br />
    <%= f.text_area :teach_detail, autofocus: true, autocomplete: "teach-detail" %>
  </div>

  <div class="field">
    <%= f.label :teacher_history, "経歴" %><br />
    <%= f.text_area :teacher_history, autofocus: true, autocomplete: "teacher-history" %>
  </div>

  <div class="field">
    <%= f.label :plan_id, "生徒さんに教えてあげる時の月額" %><br />
    <%= f.collection_select(:plan_id, Plan.all, :id, :name, {}, {class:"plan-select"}) %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "teachers/shared/links" %>

</div>