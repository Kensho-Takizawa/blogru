
<div class="container">
  <h2>プロフィールを編集</h2>
  <%= form_with model: @profile, local: true do |form| %>
    <div class="form-group">
      <div class="field-container">
        <div class="field">
          <%= form.label :nickname %>
          <%= form.text_field :nickname, value: @profile.nickname %>
        </div>

        <%= form.file_field :image, id:"article-image" %>

        <!-- 2019/10/19 Add S -->
        <div class="field">
          <%= form.label :learning_history %>
          <%= form.text_field :learning_history, value: @profile.learning_history %>
        </div>

        <div class="field">
          <%= form.label :purpose %>
          <%= form.text_area :purpose, value: @profile.purpose %>
        </div>

        <div class='input-birth-wrap'>
            <div>
              <%= form.label :birth_date, "生年月日" %>
            </div>
            <div class="date-input">
            <%= raw sprintf(
                        form.date_select(
                          :birth_date,
                          class:'select-birth',
                          id:"birth-date",
                          use_month_numbers: true,
                          prompt:'--',
                          start_year: 1930,
                          end_year: (Time.now.year - 5),
                          date_separator: '%s'),
                        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
            </div>
        </div>
      </div>
      <!-- 2019/10/19 Add E -->
      <div class="button">
        <%= form.submit "更新する" ,class:"submit" %>
      </div>
    <% end%>
    </div>
</div>