<% if current_user.already_liked?(@article) %>
    <%= link_to article_like_path(@article.id, current_user.id), method: :delete do %>
      <i class="fas fa-heart unlike-btn"></i>
    <% end %>
    <%= @article.likes.count %>
  <% else %>
    <%= link_to article_likes_path(@article.id), method: :post do %>
      <i class="far fa-heart like-btn" ></i>
    <% end %>
    <%= @article.likes.count %>
  <% end %>