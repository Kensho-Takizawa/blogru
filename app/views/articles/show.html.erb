<h2>
  <%= @article.title %>
</h2>
<% if @article.image.present? %>
<%= image_tag @article.image, class: "kk"%>
<% end%>
<div class="article-contents">
  <%= @article.content %>
</div>

<%= link_to '編集する', edit_article_path(@article.id), class: 'article-edit'%>
<%= link_to '削除', article_path(@article.id), method: :delete, class:'article-destroy' %>

<div class="container">
    <% if current_user %>
      <%= form_with(model: [@article, @comment], local: true) do |form| %>
        <%= form.text_area :content, placeholder: "コメントする", rows: "2" %>
        <%= form.submit "SEND" %>
      <% end %>
    <% else %>
      <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p>
      </strong>
    <% end %>
    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.profile.nickname, profile_path(comment.user.profile.id) %>：</strong>
            <%= comment.content %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>