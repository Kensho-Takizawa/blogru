<div class="content-wrapper">
  <div class="design">
    <%= image_tag 'layouts/design2.png', class: "body1" %>
  </div>
  <div class="except-design">
  <div class="recent-posts">
    <h3>最近の投稿</h3>
    <div class="post-wrapper">
      <div class="post-contents">
        <% @articles.each do |article|%>
          <div class="post-content">
            <%= link_to article_path(article.id), class: "post-a" do %>
              <% if article.image.present? %>
              <div class="article-img-content">
                <%= image_tag article.image, class: "article-image"%>
              </div>

              <% end%>
              <div class="article-title">
                <%= article.title %>
              </div>
            <% end%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="teachers">
    <h3>先生一覧</h3>
    <div class="teachers-wrapper">
      <div class="each-teachers">

      </div>
    </div>
  </div>
  </div>
</div>